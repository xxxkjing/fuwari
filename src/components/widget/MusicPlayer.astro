---
import { Link, ArrowUpRight } from 'phosphor-icons'; // 需安装依赖：pnpm add phosphor-icons

interface Props {
  cover?: string;    // 封面图（默认内置图）
  title?: string;    // 标题（默认“音乐时光”）
  description?: string; // 描述（默认“分享近期喜爱的音乐”）
}

// 默认参数
const { 
  cover = '/images/music-cover.jpg', 
  title = '音乐时光', 
  description = '分享近期喜爱的音乐' 
} = Astro.props;
---

<div class="music-widget">
  <!-- 顶部：封面 + 标题 -->
  <div class="header">
    <img class="cover" src={cover} alt="Music Cover" />
    <div class="text">
      <h2>{title}</h2>
      <p class="desc">{description}</p>
    </div>
  </div>

  <!-- 中间：唱片 + 进度条 -->
  <div class="player">
    <!-- 唱片图标 -->
    <div class="vinyl"></div>
    <!-- 时间 + 进度条 -->
    <div class="progress-area">
      <span class="time">0:00</span>
      <div class="progress-bar">
        <div class="progress"></div>
      </div>
    </div>
  </div>

  <!-- 底部：链接 + 分享图标 -->
  <div class="actions">
    <Link size={24} color="#bfa287" />
    <ArrowUpRight size={24} color="#bfa287" />
  </div>
</div>

<style scoped>
.music-widget {
  background-color: #1e1e1e;
  border-radius: 12px;
  padding: 1.5rem;
  color: #f2e9dc;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.header {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.cover {
  width: 64px;
  height: 64px;
  border-radius: 8px;
  object-fit: cover;
}

.text h2 {
  font-size: 1.25rem;
  font-weight: 600;
  margin: 0;
}

.desc {
  font-size: 0.9rem;
  color: #a69d8f;
  margin: 0.25rem 0 0;
}

.player {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.vinyl {
  width: 48px;
  height: 48px;
  background: radial-gradient(#333, #111);
  border-radius: 50%;
  position: relative;
}
.vinyl::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 8px;
  height: 8px;
  background: #774f38;
  border-radius: 50%;
}

.progress-area {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.time {
  font-size: 0.9rem;
  color: #c8b9a9;
}

.progress-bar {
  width: 200px;
  height: 4px;
  background: #333;
  border-radius: 2px;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: #d9b382;
  width: 0%; /* 初始进度 0% */
}

.actions {
  display: flex;
  justify-content: flex-end;
  gap: 1rem;
}

.actions svg {
  cursor: pointer;
  transition: fill 0.2s;
}
.actions svg:hover {
  fill: #d9b382;
}
</style>